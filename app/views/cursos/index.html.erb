<br>
 
  <div class="col-lg-12" style="margin-bottom:30px;">

  <%= form_for [@user, Curso.new] do |f| %>


    <% @user.cursos.each do |curso| %>

          <div class="col-lg-4 curso">
            
              <div class="card">
                <div class="card__thumb">
                  
                  <%if curso.portada %>
                        
                        <a href="/users/<%=current_user.id%>/cursos/<%=curso.id%>/edit"><%= image_tag curso.portada.url, :style =>"width:100%;" %></a>

                  <%else%>
                    <%= image_tag '900.png', class: 'pull-right display-image', style: 'width:100%;' %>
                  <%end%>
                </div>
                <div class="card__date" style="width:60px; height:60px; ">
                  <span class="card__date__day" style="padding-top:3px;"><%= curso.created_at.strftime("%d") %></span>
                  <span class="card__date__month" style="font-size:10px;"><%= curso.created_at.strftime("%B") %></span>
                </div>
                <div class="card__body">
                  <div class="card__category"><a href="/users/<%=current_user.id%>/cursos/<%=curso.id%>/edit"><%= curso.categoria%></a></div>
                  <div class="card__title"><a  href="/users/<%=current_user.id%>/cursos/<%=curso.id%>/edit"><%= curso.titulo%></div>
                  <p class="card__description"><%= curso.resumen%></p>
                </div>
                <div class="card__footer">
                  <span class="icon icon--time"><%= curso.created_at.strftime("%d") %>, <%= curso.created_at.strftime("%B") %> de <%= curso.created_at.strftime("%y") %></span>
                  <span class="icon icon--comment"><%=curso.nivel%></span>
                   

                   <a style="color:#c9302c; font-size:15px;" data-confirm="Al eliminarlo también se eliminarán las secciones y las clases de este, estás seguro de eliminar el curso?" data-method="delete" href="/users/<%=current_user.id%>/cursos/<%=curso.id%>" rel="nofollow"><i  class="fa fa-fw fa-trash hidden-md hidden-sm hidden-xs"></i><span style="font-size:12px; color:gray;">Eliminar</span></a>
                     

                   </span>
                </div>

              </div>

          </div>
      <%end%>
    <%end%>

  </div>
  





